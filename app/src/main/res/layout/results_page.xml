<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <TextView
        android:id="@+id/resultsTitleTxtV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:text="@string/results_title"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/resultsImageView"
        android:layout_width="328dp"
        android:layout_height="129dp"
        android:layout_below="@+id/resultsTitleTxtV"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ur_logo" />

    <TextView
        android:id="@+id/resultsDescriptionTextV"
        android:layout_width="216dp"
        android:layout_height="137dp"
        android:padding="30dp"
        android:text="@string/results_description"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/resultsImageView"
        android:layout_alignLeft="@+id/resultsImageView"/>

    <Button
        android:id="@+id/gpsBtn"
        android:layout_width="85dp"
        android:layout_height="97dp"
        android:text="@string/results_gps_button"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_below="@+id/resultsImageView"
        android:layout_alignRight="@+id/resultsImageView" />

    <ListView
        android:id="@+id/resultsCommentsListView"
        android:layout_width="328dp"
        android:layout_height="253dp"
        android:contentDescription="@string/results_comments"
        android:layout_below="@+id/resultsDescriptionTextV"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>